{
  "manifest_version": 3,
  "name": "TW3B Market Watch",
  "version": "2.0.0",

  "icons": {
    "128": "icon.png"
  },

  "action": {
    "default_title": "Open TW3B Watcher",
    "default_icon": {
      "128": "icon.png"
    }
  },

  "permissions": ["scripting", "tabs", "storage", "alarms", "notifications"],
  "host_permissions": ["https://weav3r.dev/*", "https://www.torn.com/*"],
  "background": { "service_worker": "background.js" },
  "options_ui": { "page": "options.html", "open_in_tab": true }
}
